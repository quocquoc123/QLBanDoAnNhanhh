@model QLBanDoAnNhanh.Models.NguoiDung

<div class="container mt-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Cập nhật thông tin cá nhân</h4>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm("Profile", "User", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.HoTen, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.HoTen, new { @class = "form-control rounded-pill px-3", placeholder = "Nhập họ tên" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.Email, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control rounded-pill px-3", placeholder = "Nhập email" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.Sdt, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.Sdt, new { @class = "form-control rounded-pill px-3", placeholder = "Nhập số điện thoại" })
                        </div>

                        <button type="submit" class="btn btn-primary w-100 rounded-pill py-2">Cập nhật</button>

                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-success mt-3 text-center">@ViewBag.Message</div>
                        }

                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger mt-3 text-center">@ViewBag.Error</div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
