@model QLBanDoAnNhanh.Models.GioHang
@{
    ViewBag.Title = "Thanh Toán";
}

<h2>Thanh Toán</h2>

@if (Model.ChiTietGioHangs.Count == 0)
{
    <p>Giỏ hàng của bạn đang trống!</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Số lượng</th>
                <th>Giá</th>
                <th>Tổng cộng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ChiTietGioHangs)
            {
                <tr>
                    <td>@item.MaSpNavigation.TenSp</td>
                    <td>@item.SoLuongSp</td>
                    <td>@String.Format("{0:C}", item.MaSpNavigation.GiaTien)</td>
                    <td>@String.Format("{0:C}", item.TongTien)</td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Tổng tiền: @String.Format("{0:C}", Model.ChiTietGioHangs.Sum(ct => ct.TongTien))</h3>

    <form asp-action="Checkout" method="post">
        <div class="form-group">
            <label for="DiaChi">Địa chỉ giao hàng:</label>
            <input type="text" id="DiaChi" name="DiaChi" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="PhuongThucThanhToan">Phương thức thanh toán:</label>
            <select id="PhuongThucThanhToan" name="PhuongThucThanhToan" class="form-control">
                <option value="CreditCard">Thẻ tín dụng</option>
                <option value="PayPal">PayPal</option>
                <option value="CashOnDelivery">Thanh toán khi nhận hàng</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Thanh Toán</button>
    </form>
}
