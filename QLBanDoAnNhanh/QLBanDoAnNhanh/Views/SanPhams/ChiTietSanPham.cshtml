@model QLBanDoAnNhanh.Models.SanPham

@{
    ViewData["Title"] = "Chi Tiết Sản Phẩm";
}
<div style="margin-left: 380px"><h1 style=" margin:auto;width:1200px;">Chi Tiết Sản Phẩm</h1></div>

<br />
@* <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"> *@
<div class="product-container">
    <div class="col-5">

        <img class="product-image" src="@Url.Content(Model.HinhAnh1)" alt="@Model.TenSp" />


    </div>
    <div class="col-7 product-details">
    <p><strong>Tên Sản Phẩm:</strong> @Model.TenSp</p>
    <p><strong>Giá:</strong> @String.Format("{0:0,0} VND", Model.GiaTien)</p>
    <p><strong>Thành Phần:</strong> @Model.ThanhPhan</p>
    <p><strong>Số Lượng Bán Trong Ngày:</strong> @Model.SlbanTrongNgay</p>
    <p><strong>Chi Tiết Sản Phẩm:</strong> @Model.ChitietSp</p>
    
    <form method="post" action="@Url.Action("MuaHang", "SanPhams")">
        <input type="hidden" name="MaSp" value="@Model.MaSp" />
        <label for="quantity">Số Lượng:</label>
        <input type="number" id="quantity" name="quantity" min="1" value="1" style="width: 100px;" />
        <button type="submit" class="btn btn-primary">Mua Ngay</button>
    </form>
    </div>
</div>
<br>

<style>
        .product-container {
            display: flex;
            align-items: flex-start;
            margin:auto;
            width:1200px;
            
        }

    .product-image {
        width: 300px;
        height: 270px;
        margin-left: 225px;
        border-radius: 8px; /* Bo tròn các góc */
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2); /* Tạo bóng đổ */
        object-fit: cover; /* Đảm bảo hình ảnh không bị méo */
        transition: transform 0.3s ease, box-shadow 0.3s ease; /* Hiệu ứng khi hover */
    }

        .product-image:hover {
            transform: scale(1.05); /* Phóng to nhẹ khi hover */
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.3); /* Bóng đổ mạnh hơn khi hover */
        }

        .product-details {
            margin-left: 70px;
        }

            .product-details p {
                font-size: 18px;
                margin: 5px 0;
            }

            .product-details form {
                margin-top: 15px;
            }

    form {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

        form label {
            margin-bottom: 10px;
        }

        form input {
            margin-bottom: 15px;
        }

        form button {
            align-self: flex-start;
            padding: 10px 20px;
            background-color: #0af030;
            border: none;
            color: white;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            form button:hover {
                background-color: #00a61b;
            }


</style>