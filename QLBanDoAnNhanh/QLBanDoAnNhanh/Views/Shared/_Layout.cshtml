                        <span class="cart-count" style="position: absolute; top: -8px; right: -20px; background-color: red; color: white; border-radius: 50%; padding: 3px;">
                            @(ViewBag.CartItemCount ?? 0)
                        </span>
                    </a>
                </div>
            </div>
        </div>
        <hr />
        <div class="logo-search">
            <a href="@Url.Action("TrangChu", "SanPhams")">
                <img src="~/images/logo.jpg" alt="Foot Store Logo" class="logo">
            </a>
            <nav>
                <ul>
                    <li><a href="@Url.Action("TrangChu", "SanPhams")">Trang chủ</a></li>
                    <li><a href="@Url.Action("SanPhamTheoTenDanhMuc", "SanPhams", new { TenHang = "THUCDON" }, null)">Thực đơn</a></li>
