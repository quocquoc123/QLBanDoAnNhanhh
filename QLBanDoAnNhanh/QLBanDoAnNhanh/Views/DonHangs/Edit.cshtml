@model QLBanDoAnNhanh.Models.DonHang

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayouAdmin.cshtml";
}

<form asp-action="Edit">
    <input type="hidden" asp-for="MaDh" />

    <div class="form-group">
        <label>Địa Chỉ</label>
        <input class="form-control" type="text" asp-for="Diachi" />
    </div>

    <div class="form-group">
        <label>Trạng Thái</label>
        <select class="form-control" asp-for="TrangThai">
            <option value="Chưa Giao" selected>Chưa Giao</option>
            <option value="Đã Giao">Đã Giao</option>
            <option value="Hủy Đơn">Hủy Đơn</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Cập Nhật</button>
    <a class="btn btn-secondary" asp-action="Index">Hủy</a>
</form>


